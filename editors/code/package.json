{
  "name": "crabviz",
  "displayName": "Crabviz",
  "description": "interactive call graph generator",
  "version": "0.4.0",
  "publisher": "chanhx",
  "author": {
    "name": "Chan HoCheung"
  },
  "icon": "media/icon.png",
  "repository": {
    "url": "https://github.com/chanhx/crabviz"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "call graph"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "crabviz.generateCallGraph",
        "title": "Crabviz: Generate Call Graph"
      },
      {
        "command": "crabviz.generateFuncCallGraph",
        "title": "Crabviz: Generate Function Call Graph"
      },
      {
        "command": "crabviz.save",
        "title": "Save Call Graph As ..."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "crabviz.generateCallGraph",
          "when": "never"
        },
        {
          "command": "crabviz.generateFuncCallGraph",
          "when": "never"
        },
        {
          "command": "crabviz.save",
          "when": "never"
        }
      ],
      "editor/context": [
        {
          "command": "crabviz.generateFuncCallGraph",
          "group": "crabviz",
          "when": "editorHasCallHierarchyProvider"
        }
      ],
      "explorer/context": [
        {
          "command": "crabviz.generateCallGraph",
          "group": "crabviz"
        }
      ],
      "webview/context": [
        {
          "command": "crabviz.save",
          "when": "webviewId == 'crabviz.callgraph'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "~1.83.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/test-electron": "^2.3.9",
    "@wasm-tool/wasm-pack-plugin": "^1.6.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.4.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.1.3"
  },
  "dependencies": {
    "@viz-js/viz": "^3.4.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "ignore": "^5.3.0"
  }
}
