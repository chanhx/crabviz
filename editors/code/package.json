{
  "name": "crabviz",
  "displayName": "Crabviz",
  "description": "interactive call graph generator",
  "version": "0.3.1",
  "publisher": "chanhx",
  "author": {
    "name": "Chan HoCheung"
  },
  "icon": "media/icon.png",
  "repository": {
    "url": "https://github.com/chanhx/crabviz"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "call graph"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "crabviz.generateCallGraph",
        "title": "Crabviz: Generate Call Graph"
      },
      {
        "command": "crabviz.generateFuncCallGraph",
        "title": "Crabviz: Generate Function Call Graph"
      },
      {
        "command": "crabviz.exportCallGraph",
        "title": "Export Call Graph"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "crabviz.generateCallGraph",
          "when": "never"
        },
        {
          "command": "crabviz.generateFuncCallGraph",
          "when": "never"
        },
        {
          "command": "crabviz.exportCallGraph",
          "when": "never"
        }
      ],
      "editor/context": [
        {
          "command": "crabviz.generateFuncCallGraph",
          "when": "editorHasCallHierarchyProvider"
        }
      ],
      "explorer/context": [
        {
          "command": "crabviz.generateCallGraph",
          "group": "crabviz"
        }
      ],
      "webview/context": [
        {
          "command": "crabviz.exportCallGraph",
          "when": "webviewId == 'crabviz.callgraph'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "@wasm-tool/wasm-pack-plugin": "^1.6.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.1.3"
  },
  "dependencies": {
    "@hpcc-js/wasm": "^1.20.1",
    "ignore": "^5.3.0"
  }
}
